{
    "ecmaFeatures": {
        "jsx": true,
        "modules": true
    },

    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },

    "globals": {
        "jQuery": true,
        "$": true
    },

    "rules": {

        "no-inner-declarations": [2, "both"],
        "block-scoped-var": 2,
        "eqeqeq": 1,
        "no-caller": 1,
        "no-eq-null": 1,
        "no-multi-spaces": 1,
        "no-multi-str": 2,

        "array-bracket-spacing": [1, "never"],
        "brace-style": 2,
        "camelcase": 2,
        "comma-spacing": 2,
        "comma-style": 2,
        "eol-last": 2,
        "indent": [2, 2],
        "key-spacing": [1, {"beforeColon": false, "afterColon": true}],
        "lines-around-comment": 2,
        "no-underscore-dangle": 0,
        "quotes": [1, "single", "avoid-escape"],
        "semi-spacing": [2, { "before": false, "after": true }],
        "semi": 2,
        "space-infix-ops": 2,
        "space-unary-ops": 2,

        "strict": 0,
        "max-depth": [1, 3],
        "max-len": [2, 160, 4],
        "comma-style": [2, "last"],
        "no-var": 0,
        "no-alert": 0,
        "no-wrap-func": 0,
        "no-spaced-func": 0,

        "arrow-spacing": 1,
        "constructor-super": 2,
        "no-class-assign": 2,
        "no-const-assign": 2,
        "no-dupe-class-members": 2,
        "no-this-before-super": 1
    }
}
